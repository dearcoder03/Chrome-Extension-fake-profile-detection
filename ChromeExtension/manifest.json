{
  "manifest_version": 3,
  "name": "Social Media Details",
  "version": "1.0",
  "description": "Fetch and verify user details from social media platforms",
  "permissions": ["activeTab", "tabs"],
  "host_permissions": [
    "https://socialmediadeatils.onrender.com/*",
    "https://fake-profile-detect-api.onrender.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/image1.png",
      "48": "assets/image1.png",
      "128": "assets/image1.png"
    }
  }
}